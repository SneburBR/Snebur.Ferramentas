        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zyoncore.GeradorCerificadorSsl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
 
    <Grid Margin="10 0 0 0">

        <StackPanel>
            <TextBlock Margin="0 8"> Dominio:</TextBlock>
            <TextBox x:Name="TxtDominio" Margin="0 8"></TextBox>
            <Button  Click="BtnGerarCertificado_Click" Margin="0 8"> Gerar </Button>
        </StackPanel>
        
    </Grid>
</Window>
